{
  "manifest_version": 3,
  "name": "Privacy4Whatsapp",
  "description": "Blur Whatsapp messages until you hover over them",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-48.png",
    "32": "icons/icon-48.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-48.png"
  },
  "content_scripts": [
    {
      "js": [
        "blur-to-messages.js"
      ],
      "matches": [
        "https://web.whatsapp.com/"
      ]
    }
  ]
}